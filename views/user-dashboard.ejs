        .category-nav {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #fff;
            padding: 10px 0;
            border-bottom: 2px solid #eee;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .category-item {
            margin: 10px;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: 600;
            color: #333;
            text-decoration: none;
            border-radius: 5px;
            transition: all 0.3s ease-in-out;
            position: relative;
            display: inline-block;
            text-align: center;
        }

        .category-item:hover {
            background-color: #0077cc;
            color: #fff;
        }

        .category-item::after {
            content: "";
            position: absolute;
            width: 100%;
            height: 2px;
            background-color: #0077cc;
            bottom: 0;
            left: 0;
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .category-item:hover::after {
            transform: scaleX(1);
        }

        .category-item.active {
            background-color: #0077cc;
            color: #fff;
        }

        @media (max-width: 768px) {
            .category-nav {
                display: grid;
                grid-template-columns: repeat(2, 1fr);
                gap: 20px;
                padding: 15px 0;
            }

            .category-item {
                margin: 0;
                font-size: 14px;
                padding: 12px 20px;
                text-align: center;
            }
        }

        @media (max-width: 480px) {
            .category-nav {
                display: grid;
                grid-template-columns: repeat(2, 1fr);
                gap: 15px;
                padding: 15px 0;
            }

            .category-item {
                font-size: 12px;
                padding: 10px 15px;
            }
        }

        .hero-section {
            margin-top: -7px;
            position: relative;
            width: 100%;
            max-height: 800px;
            overflow: hidden;
        }

        .hero-slides {
            display: flex;
            transition: transform 0.5s ease-in-out;
            width: 100%;
        }

        .hero-slide {
            position: relative;
            min-width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .hero-image {
            width: 100%;
            height: auto;
            object-fit: cover;
            max-height: 600px;
        }

        .hero-navigation {
            position: absolute;
            top: 50%;
            left: 0;
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 3;
            transform: translateY(-50%);
        }

        .hero-nav-btn {
            background: transparent;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            font-size: 2rem;
            z-index: 4;
            transition: background-color 0.3s;
            margin-top: -150px;
        }

        .hero-nav-btn:hover {
            border: solid 2px #ccc;
        }

        @media (max-width: 768px) {
            .hero-slide h2 {
                font-size: 1.8rem;
            }

            .hero-slide p {
                font-size: 1rem;
            }

            .hero-section {
                display: none;
            }

            .upright {
                margin-top: 50px !important;
